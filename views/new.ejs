<% layout('layout') -%>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Chat</h2>
    <form action="/chats/create" method="POST" class="space-y-4">
        <div>
            <label for="from" class="block text-sm font-medium text-gray-700">From</label>
            <input type="text" name="from" id="from" required
                   class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200"
                   placeholder="Your name">
        </div>
        <div>
            <label for="msg" class="block text-sm font-medium text-gray-700">Message</label>
            <textarea name="msg" id="msg" required rows="4"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200"
                      placeholder="Your message"></textarea>
        </div>
        <div>
            <label for="to" class="block text-sm font-medium text-gray-700">To</label>
            <input type="text" name="to" id="to" required
                   class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200"
                   placeholder="Recipient's name">
        </div>
        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition">
            Create Chat
        </button>
    </form>
</div>