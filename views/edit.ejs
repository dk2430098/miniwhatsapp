<% layout('layout') -%>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Edit Chat</h2>
    <p class="text-sm text-gray-600 mb-4">Chat ID: <%= chat._id %></p>
    <p class="text-sm text-gray-600 mb-4">
        From: <span class="font-semibold"><%= chat.from %></span> to 
        <span class="font-semibold"><%= chat.to %></span>
    </p>
    <form action="/chats/<%= chat._id %>?_method=PUT" method="POST" class="space-y-4">
        <div>
            <label for="msg" class="block text-sm font-medium text-gray-700">Message</label>
            <textarea name="msg" id="msg" required rows="4"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200"
                      ><%= chat.msg %></textarea>
        </div>
        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition">
            Update Chat
        </button>
    </form>
</div>